#define BLYNK_TEMPLATE_ID "TMPL3o9RTPGjq"
#define BLYNK_TEMPLATE_NAME "IOT HOME"
#define BLYNK_AUTH_TOKEN "dhlod_374HLkwLw7Co_OmnhAshkn-F2F"
char auth[] = BLYNK_AUTH_TOKEN;
#include <WiFi.h>
#include <BlynkSimpleEsp32.h>
#include<SoftwareSerial.h>
//SoftwareSerial ss(D1,D2);
#define BLYNK_PRINT Serial
//char auth[] = BLYNK_AUTH_TOKEN;
// Your WiFi credentials.
char ssid[] = "ABCDE";
char pass[] = "123456789";
#include <SPI.h>
#include <Ethernet.h>
BlynkTimer timer;
#define Relay1 18
#define Relay2 19
#include <DHT.h>
#define DHTTYPE  DHT11    
#define DHTPIN 23
DHT dht(DHTPIN, DHTTYPE);

BLYNK_WRITE(V1)
{
  int pinValue = param.asInt(); // assigning incoming value from pin V1 to a variable
  Serial.println(pinValue);

  if(pinValue == 1)
  {
     digitalWrite(Relay1,HIGH);
     delay(1000);
  }

  if(pinValue == 0)
  {
    digitalWrite(Relay1,LOW);
    delay(1000);
  }
}
BLYNK_WRITE(V2)
{
  int pinValue1 = param.asInt(); // assigning incoming value from pin V1 to a variable
  Serial.println(pinValue1);

  if(pinValue1 == 1)
  {
     digitalWrite(Relay2,HIGH);
     delay(1000);
  }

  if(pinValue1 == 0)
  {
    digitalWrite(Relay2,LOW);
    delay(1000);
  }
}

void setup()
{
  Serial.begin(9600);
  Blynk.begin(auth, ssid, pass);
  dht.begin();
  pinMode(Relay1,OUTPUT);
  pinMode(Relay2,OUTPUT);
  digitalWrite(Relay1,LOW);
  digitalWrite(Relay2,LOW);

}

void loop()
{

   float temperature = dht.readTemperature(); 
   Serial.print("Temperature: ");
   Serial.print(temperature);
   Serial.println("Â°C");
   Blynk.virtualWrite(V0, temperature);
   delay(1000);
   float humidity = dht.readHumidity(); 
   Serial.print("Humidity: ");
   Serial.print(humidity);
   
   Blynk.run();
   timer.run();
}
